
@model HabitatManagement.BusinessEntities.TemplateFormSectionBE

@{
    Layout = null;
}

<form id="TemplateSectionForm" asp-controller="Home" asp-action="TemplateSection">
    <div class="container-fluid">
        <div class="form-group row">
            <label class="col-sm-2 text-right col-form-label" asp-for="Section">Section</label>
            <div class="col-sm-10">
                @Html.TextBox("Section", Model.Section, new { @class = "form-control uppercaseTextBox" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 text-right col-form-label" asp-for="Description">Description</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m=> m.Description,new { @class = "form-control" })
            </div>
        </div>
        @Html.HiddenFor(m => m.FormID)                
    </div>
</form>