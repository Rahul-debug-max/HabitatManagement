@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/Style.css" />
<script src="~/Grids/FormDesigner.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        InitiliazeToolbarScrollBar('FormTemplateFlexi');      
    });

</script>

<style>
    .input-group-append {
        cursor: pointer;
    }
</style>
<div class="row white-bg " style="padding-top: 8px; padding-bottom: 8px;">

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h3>Form Screen Design Template</h3>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12  text-center">
        <div class="col-xs-12 col-sm-12 col-md-10 col-lg-9 paddlftrght-none" style="overflow: hidden; margin: 0 auto; display: inline-block; float: none;">
            <div style="overflow: hidden;">
                <div class="toolbarOuter" style="padding: 0 15px; display: inline-block;">
                    <span class="nextBtn" id="spanrightTemplateList"><span class="spanBgGrey"><span class="glyphicons glyphicons-chevron-right"></span></span></span>
                    <span id="spanleftDTList" class="xsBtn prevBtn"><span class="glyphicons glyphicons-chevron-left"></span></span>
                    <ul id="FormTemplateFlexi" class="icon-inlinb">
                        <li>
                            <a href="javascript:void(0);" id="RefreshFormTemplate" title="Refresh"><span class="glyphicons glyphicons-refresh"></span><div class="toolbarlabel">Refresh</div></a>
                        </li>
                        <li>
                            <a href="javascript:void(0);" id="AddFormTemplate" title="Add"><span class="glyphicons glyphicons-plus"></span><div class="toolbarlabel">Add</div></a>
                        </li>
                        <li>
                            <a href="javascript:void(0);" id="EditFormTemplate" title="Edit"><span class="glyphicons glyphicons-edit"></span><div class="toolbarlabel">Edit</div></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding-bottom: 15px;">
        <div class="jqgrid-table">
            <table id="tblFormDesigner"></table>
            <div id="pagerFormDesigner"></div>
        </div>
    </div>
</div>